
General Direction = +x

Camera {
	mode = static
	direction = N
	forwardbackward = 1
}

Blocky b1 = [ 
			(0,0,1 | "red")
			(1,1,1 | "white")
		]

Blocky b2 = [ 
			(0,1,1 | "blue")
			(1,1,1 | "cyan")
		]
		
Map {
		DECL : b1
		ASS : b2
		IF: b3 {then: Relative Dir + Offset}
		IFELSE: b4 {then: Relative Dir + Offset, else: RelDir+Offset}
		GT: b5
		POW: b6 {lhs: Relative Dir + Offset rhs: Relative Dir + Offset} 
		powExpr(Expr lhs, Expr rhs) // 8 ** 8
}